<%= form_for([@todo_list, @todo_list.todo_items.build]) do |f| %>
  <div class="row">
    <div class="col-sm-10">
      <%= f.text_field :content, placeholder: "New To-do" %>
    </div>
    <div class="col-sm-2">
      <%= f.submit :class => "btn btn-outline-secondary todo-submit"%>
    </div>
  </div>
<% end %>
