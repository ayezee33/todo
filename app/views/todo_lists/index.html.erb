<div class="container">
  <div class="row">
    <% @todo_lists.each do |todo_list| %>
      <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="card">
          <div class="index_row clearfix">
            <h2 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h2>
            <p class="todo_list_sub_title"><%= todo_list.description %></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div class="links">
      <%= link_to "New To-do List", new_todo_list_path, :class => "btn btn-outline-secondary" %>
    </div>

  </div>
